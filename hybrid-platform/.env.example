# Environment variables for Hybrid Platform deployment
# Copy this file to .env and fill in the values

# MongoDB Configuration
MONGO_USERNAME=hybrid_admin
MONGO_PASSWORD=your_secure_password_here

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_here

# AWS Configuration for Media Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_VIDEO_BUCKET=hybrid-platform-videos
S3_THUMBNAIL_BUCKET=hybrid-platform-thumbnails
CLOUDFRONT_VIDEO_DOMAIN=videos.your-domain.com
CLOUDFRONT_THUMBNAIL_DOMAIN=thumbnails.your-domain.com

# Application URLs
CLIENT_URL=https://hybrid-platform.example.com
API_URL=https://hybrid-platform.example.com/api
